				<Insets />
			</BorderPane.margin>
			<children>
				<AnchorPane prefHeight="58.0" prefWidth="305.0">
					<children>
						<Button fx:id="chooseDocument" layoutY="-5.0"
							mnemonicParsing="false" onAction="#chooceDocumentTapped"
							prefHeight="39.0" prefWidth="150.0" text="Upload Dokument" />
