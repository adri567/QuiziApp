	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.QuiziApp.PopupController">
	<top>
		<ChoiceBox fx:id="chooseSection"
			onAction="#chooseSectionTapped" prefHeight="25.0" prefWidth="318.0"
			BorderPane.alignment="CENTER">
			<BorderPane.margin>
				<Insets left="5.0" right="5.0" top="10.0" />
