				</AnchorPane>
			</children>
		</HBox>
	</bottom>
	<center>
		<GridPane prefHeight="259.0" prefWidth="222.0"
			BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<TextField fx:id="nameQuiz" prefHeight="47.0"
					prefWidth="300.0" promptText="Quiz Name" GridPane.rowIndex="1">
					<GridPane.margin>
						<Insets bottom="5.0" top="2.5" />
					</GridPane.margin>
				</TextField>
				<TextField fx:id="chooseNewSection" disable="true"
					prefHeight="52.0" prefWidth="300.0" promptText="Gruppe wÃ¤hlen">
